<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.sw2017.xp4.hobit.GroupOverview">

    <TextView
        android:id="@+id/txtview_hobby_input"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_above="@+id/txtview_location_title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:text="NameOfHobby"
        android:textColor="#1a237e"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtview_location_input"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/txtview_location_title"
        android:layout_alignBottom="@+id/txtview_location_title"
        android:layout_alignEnd="@+id/txtview_hobby_input"
        android:text="NameOfLocation"
        android:textColor="#1a237e"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtview_description_input"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="26dp"
        android:text="Description"
        android:textAlignment="center"
        android:textColor="#1a237e"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp"
        android:layout_below="@+id/txtview_description_title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtview_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Description"
        android:textColor="#1a237e"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp"
        android:layout_below="@+id/txtview_location_input"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtview_location_title"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtview_hobby_title"
        android:layout_marginTop="29dp"
        android:text="Location"
        android:textColor="#1a237e"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtview_number_nom"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/txtview_nom"
        android:layout_alignBottom="@+id/txtview_nom"
        android:layout_toEndOf="@+id/txtview_description_title"
        android:text="number"
        android:textColor="#1a237e"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtview_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtview_description_input"
        android:layout_marginTop="33dp"
        android:text="Current Participants"
        android:textColor="#1a237e"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtview_hobby_title"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:text="Hobby"
        android:textColor="#1a237e"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btn_join"
        android:layout_alignBottom="@+id/btn_join"
        android:layout_alignStart="@+id/txtview_number_nom"
        android:text="Back" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="18dp"
        android:text="Join" />


</RelativeLayout>
