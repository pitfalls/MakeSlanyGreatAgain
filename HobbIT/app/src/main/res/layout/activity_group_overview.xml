<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.sw2017.xp4.hobit.GroupOverview">

    <TextView
        android:id="@+id/txtview_description_input"
        android:layout_width="338dp"
        android:layout_height="123dp"
        android:layout_marginBottom="176dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:background="?attr/colorButtonNormal"
        android:clickable="true"
        android:editable="true"
        android:elevation="1dp"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Put your description here.."
        android:inputType="text|textMultiLine"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/txtview_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Description"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtview_description_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtview_location_input" />

    <TextView
        android:id="@+id/txtview_location_title"
        android:layout_width="98dp"
        android:layout_height="44dp"
        android:text="Location"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/txtview_hobby_title"
        app:layout_constraintBottom_toBottomOf="@+id/txtview_location_input"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.322" />

    <TextView
        android:id="@+id/txtview_number_nom"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginBottom="126dp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="8dp"
        android:text="number"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtview_description_input"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/txtview_description_input"
        android:layout_marginRight="16dp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txtview_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Participants"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtview_number_nom"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/txtview_hobby_title"
        android:layout_width="95dp"
        android:layout_height="32dp"
        android:text="Hobby"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/txtview_location_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.727"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtview_hobby_input" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:text="Back"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_join"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_join" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Join"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="41dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="27dp"
        app:layout_constraintLeft_toRightOf="@+id/txtview_nom" />

    <EditText
        android:id="@+id/txtview_location_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Type in your location"
        android:inputType="text|textMultiLine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtview_hobby_input" />

    <EditText
        android:id="@+id/txtview_hobby_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="9dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Write your Hobbie here"
        android:inputType="text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
