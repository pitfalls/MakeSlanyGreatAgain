<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_1"
    tools:context="at.sw2017.xp4.hobit.GroupCreation">

    <TextView
        android:id="@+id/textview_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="#1a237e"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp"
        android:layout_below="@+id/spinner_location"
        android:layout_toStartOf="@+id/btn_cancel"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/editText_Description"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textview_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="top"
        android:hint="Description of the Hobby"
        android:inputType="text"
        android:maxLength="300"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textColorLink="@android:color/black" />

    <EditText
        android:id="@+id/editText_Groupname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/spinner_hobby"
        android:layout_alignTop="@+id/txtView_group_name"
        android:gravity="top"
        android:hint="GroupName"
        android:inputType="text"
        android:maxLength="20"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textColorLink="@android:color/black"
        tools:inputType="text" />

    <Spinner
        android:id="@+id/spinner_location"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp" />

    <Spinner
        android:id="@+id/spinner_hobby"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/spinner_location" />

    <TextView
        android:id="@+id/txtView_group_name"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:text="Group Name"
        android:textColor="#1a237e"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textColor="#1a237e"
        android:textSize="24dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hobby"
        android:textColor="#1a237e"
        android:textSize="24dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/txtView_group_name"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Cancel"
        android:layout_alignBaseline="@+id/btn_save"
        android:layout_alignBottom="@+id/btn_save"
        android:layout_alignEnd="@+id/editText_Description" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="15dp"
        android:text="Save" />

</RelativeLayout>
